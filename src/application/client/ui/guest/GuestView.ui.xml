<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .headline {
            font-size: 35px;
            max-width: 400px;
            font-weight: 800;
            margin: 0 auto 20px;
        }
    </ui:style>

    <g:HTMLPanel styleName="content-container">

        <g:DockLayoutPanel unit="EM" width="100%" height="100%">

            <g:north size="5">
                <g:HTMLPanel styleName="north">
                    <g:Label text="MotionCBS" styleName="logo" />
                    <g:HTMLPanel styleName="rightMenu">
                        <g:Label text="Login" ui:field="toLogin" />
                        <g:Button styleName="btn-small" text="Tilmeld mig nu" ui:field="signUp1" />
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:north>

            <g:center>
                <g:HTMLPanel styleName="content content-center">
                    <g:Label styleName="{style.headline}" text="KOM I FORM FOR 0,- DEN FØRSTE MÅNED" />
                    <g:Button styleName="btn-big" text="Tilmeld mig nu!" ui:field="signUp2"/>
                </g:HTMLPanel>
            </g:center>

        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>